<h1><%= @post.title %></h1>
<small><%= @post.created_at.strftime("%d %b. %y") %></small>
<p><%= @post.body %></p>

<%= link_to "Edit Post", edit_post_path %>
<%= link_to "Delete Post", @post, data: {confirm: "Are you sure?"}, method: :delete %>

<p><%= link_to  @post.category.name, category_path(id: @post.category.id)%></p>