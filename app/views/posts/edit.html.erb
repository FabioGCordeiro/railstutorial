<h1>Edit post</h1>

<%= form_for @post do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %><br/>
    </p>
    <p>
        <%= f.label :body %><br/>
        <%= f.text_area :body %><br/>
    </p>
    <p>
        <%= f.select :category_id, @categories.collect {|x| [x.name, x.id]}, {include_blank: "Select One"} %>
    </p>
     <p>
        <%= f.submit "Update Post" %>
    </p>

    <%= link_to  "Back", post_path %>
<% end %>